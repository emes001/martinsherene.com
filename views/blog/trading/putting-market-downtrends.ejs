	<script type="text/javascript">
		function getTermDescription(term) {
			if (!term) return "";

			var termDictionary = [
				{
					"term" : "SPY",
					"description" : "The Standard & Poor's 500, often abbreviated as the S&P 500, or just 'the S&P', is an American stock market index based on the market capitalizations of 500 large companies having common stock listed on the NYSE or NASDAQ. SPY is an ETF that tracks the S&P 500."
				},
				{
					"term": "QQQ",
					"description": "The Nasdaq Stock Market is an American stock exchange. It is the second-largest exchange in the world by market capitalization, behind only the New York Stock Exchange. QQQ is an ETF that tracks the 100 largest companies listed on NASDAQ."
				}
			]

			var foundTerm = _.find(termDictionary, function(item) {
				return item.term.toLowerCase() == term.toLowerCase();
			})

			if (!foundTerm) {
				console.error("Term '" + term + "' does not exist.");
			}

			return foundTerm.description || "";
		}

		function setupTermDictionary() {
			$("[data-term]").each(function(index, element) {
				var term = $(element).data("term");
				var description = getTermDescription(term);

				$(element).attr("title", description);
				$(element).addClass("term");
			})
		}

		function setupColorbox() {
			$("img").each(function(index, element) {
				var url = $(this).attr("src");
				var altText = $(this).attr("alt");
				$(this).colorbox({ href: url, title: altText });
			});
		}

		$(document).ready(function() {
			setupTermDictionary();
			setupColorbox();
		});
	</script>
